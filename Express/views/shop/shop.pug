extends  layouts/main-layout.pug

block styles 
    link(rel='stylesheet', href='/css/product.css')

block content 
    main
        if productList.length
            .grid
                each product in productList
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://picsum.photos/200/300",  alt="photo")
                        div.card__content
                            h2.product_price $19.99
                            p.product__description A very interresting book
                        .card__actions
                            button.btn Add to Card
        else 
            h1 No Products
        

